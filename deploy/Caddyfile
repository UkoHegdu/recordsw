# HTTPS for tmrecords.mooo.com - auto certificates via Let's Encrypt
{
    log {
        format json {
            time_format rfc3339
        }
    }
}

tmrecords.mooo.com {
    handle /api/* {
        reverse_proxy backend:3000
    }
    handle /health {
        reverse_proxy backend:3000
    }
    handle {
        reverse_proxy frontend:80
    }
}
